@using LearningPython.BLL.Data.Enums
@using LearningPython.DAL.Models
@model Lesson

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Підтвердіть видалення
        </div>
        <form asp-action="Delete" method="post">
            <div class="card-body">
                <h5 class="card-title">Ви впевненні що хочете видалити цей урок?</h5>
                <div class="form-group">
                    <label class="font-weight-bold">Назва уроку</label>
                    <p class="form-control-static">@Model.Title</p>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Опис</label>
                    <p class="form-control-static">@Model.Description</p>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Категорія</label>
                    <p class="form-control-static">@Model.LessonTag</p>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Зоображення</label>
                    <img src="@Model.Image" alt="Section Image" style="max-width: 200px; height: auto;">
                </div>
                <button type="submit" class="btn btn-danger">Видалити</button>
                <a asp-action="Index" class="btn btn-secondary">Відмінити</a>
            </div>
        </form>
    </div>
</div>