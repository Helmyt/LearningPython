@model LearningPython.DAL.Models.TestQuestion

@{
    ViewData["Title"] = "Delete Test Question";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Confirm Delete
        </div>
        <form asp-action="Delete" method="post">
            <div class="card-body">
                <h5 class="card-title">Are you sure you want to delete this test question?</h5>
                <div class="form-group">
                    <label class="font-weight-bold">Question Text</label>
                    <p class="form-control-static">@Model.Text</p>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Category</label>
                    <p class="form-control-static">@Model.Category</p>
                </div>
                @if (Model.Image != null)
                {
                    <div class="form-group">
                        <label class="font-weight-bold">Image</label>
                        <img src="@Model.Image" alt="Question Image" style="max-width: 200px; height: auto;">
                    </div>
                }
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
